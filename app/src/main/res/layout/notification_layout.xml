<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Checkpoint and Waypoint Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left Section for Checkpoint -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/checkPointButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Checkpoint"
                android:scaleType="centerInside"
                android:src="@drawable/checkpoint" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/distanceCpToCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CP Distance: 0 km"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/flyCpToCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flyCpToCurrent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cpAverageSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cpAverageSpeed"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Section for Waypoint -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/wayPointButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Waypoint"
                android:scaleType="centerInside"
                android:src="@drawable/waypoint" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wpToCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WP Distance: 0 km"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/flyWpToCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flyWpToCurrent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wpAverageSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wpAverageSpeed"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
